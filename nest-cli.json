{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["**/*.{hbs,css}"],
    "plugins": [
      {
        "name": "@nestjs/swagger"
      },
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [".dto.ts", ".input.ts", ".args.ts"]
        }
      }
    ]
  }
}
